@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor
@using ScrumMaster.Models

<EditForm Model="@ClientProfile" OnValidSubmit="OnValidSubmitAsync">
    <DataAnnotationsValidator />

    <MudDialog Style="width:450px;">
        <DialogContent>
            <MudText Typo="Typo.h6">@DialogTitle</MudText>

            <MudTextField T="string"
                          @bind-Value="ClientProfile.Name"
                          Label="Client Name"
                          Required="true"
                          For="@(() => ClientProfile.Name)" />

            <MudTextField T="string"
                          @bind-Value="ClientProfile.Code"
                          Label="Client Code"
                          For="@(() => ClientProfile.Code)" />

            <MudCheckBox T="bool"
                         @bind-Checked="ClientProfile.IsActive"
                         Label="Active" />

            <MudTextField T="string"
                          @bind-Value="ClientProfile.Notes"
                          Label="Notes"
                          Lines="3"
                          For="@(() => ClientProfile.Notes)" />
        </DialogContent>

        <DialogActions>
            <MudButton Color="Color.Primary"
                       Variant="Variant.Outlined"
                       OnClick="Cancel">
                Cancel
            </MudButton>
            <MudButton Color="Color.Primary"
                       Variant="Variant.Filled"
                       ButtonType="ButtonType.Submit">
                Save
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
